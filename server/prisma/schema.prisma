generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Room {
  id        String   @id @default(uuid())
  host      String
  players   Players[]
  rounds    Round[]
  category  String
  createdAt DateTime @default(now())
}

model Round {
  id        String   @id @default(uuid())
  roomId    String
  roundNumber Int
  currentDefinition String
  currentAnswer String
  winner    String
  room      Room     @relation(fields: [roomId], references: [id])
}

model Players {
  id        String   @id @default(uuid())
  roomId    String
  username  String
  connected Boolean
  score     Int
  room      Room     @relation(fields: [roomId], references: [id])
}

